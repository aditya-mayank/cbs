<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cycleborrowingsystem.controllers.CyclesController" prefWidth="620" prefHeight="720">
	<VBox spacing="12" AnchorPane.topAnchor="18" AnchorPane.leftAnchor="18" AnchorPane.rightAnchor="18" AnchorPane.bottomAnchor="18">
		<HBox spacing="10" alignment="CENTER_LEFT">
			<Label text="Cycles" style="-fx-font-size:18px; -fx-font-weight:600;"/>
			<Pane HBox.hgrow="ALWAYS"/>
			<Button fx:id="refreshBtn" text="Refresh"/>
			<Button fx:id="logoutBtn" text="Logout"/>
		</HBox>
		<TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
			<Tab text="Available" closable="false">
				<BorderPane>
					<center>
						<TableView fx:id="availableTable" prefHeight="400.0">
							<columns>
								<TableColumn fx:id="aModelCol" text="Model" prefWidth="200"/>
								<TableColumn fx:id="aOwnerCol" text="Owner" prefWidth="220"/>
								<TableColumn fx:id="aLocationCol" text="Location (lat,lon)" prefWidth="180"/>
							</columns>
						</TableView>
					</center>
					<bottom>
						<HBox spacing="8" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
							<Button fx:id="borrowBtn" text="Request Borrow"/>
							<Button fx:id="backBtn" text="Back"/>
						</HBox>
					</bottom>
				</BorderPane>
			</Tab>
			<Tab text="My Cycles" closable="false">
				<VBox spacing="8">
					<HBox spacing="6">
						<TextField fx:id="addModelField" promptText="Cycle model" HBox.hgrow="ALWAYS"/>
						<TextField fx:id="addLatField" promptText="lat"/>
						<TextField fx:id="addLonField" promptText="lon"/>
						<Button fx:id="addCycleBtn" text="Add"/>
					</HBox>
					<TableView fx:id="myTable" VBox.vgrow="ALWAYS">
						<columns>
						<TableColumn fx:id="mModelCol" text="Model" prefWidth="220"/>
						<TableColumn fx:id="mLocationCol" text="Borrower Location (live)" prefWidth="220"/>
						<TableColumn fx:id="mBorrowedCol" text="Borrowed By" prefWidth="160"/>
						</columns>
					</TableView>
					<HBox spacing="8" alignment="CENTER_RIGHT">
						<Button fx:id="removeCycleBtn" text="Remove Selected"/>
					</HBox>
				</VBox>
			</Tab>
			<Tab text="Requests" closable="false">
				<VBox spacing="8">
					<Label text="Incoming (for my cycles)" style="-fx-font-weight:600;"/>
					<TableView fx:id="incomingTable" VBox.vgrow="NEVER" prefHeight="180">
						<columns>
							<TableColumn fx:id="inCycleCol" text="Cycle" prefWidth="240"/>
							<TableColumn fx:id="inBorrowerCol" text="Borrower" prefWidth="200"/>
							<TableColumn fx:id="inStatusCol" text="Status" prefWidth="120"/>
						</columns>
					</TableView>
					<HBox spacing="8" alignment="CENTER_RIGHT">
						<Button fx:id="acceptBtn" text="Accept"/>
						<Button fx:id="declineBtn" text="Decline"/>
					</HBox>
					<Label text="My Requests" style="-fx-font-weight:600;"/>
					<TableView fx:id="outgoingTable" VBox.vgrow="ALWAYS">
						<columns>
							<TableColumn fx:id="outCycleCol" text="Cycle" prefWidth="240"/>
							<TableColumn fx:id="outOwnerCol" text="Owner" prefWidth="200"/>
							<TableColumn fx:id="outStatusCol" text="Status" prefWidth="120"/>
						</columns>
					</TableView>
				</VBox>
			</Tab>
			<Tab text="My Borrowed" closable="false">
				<VBox spacing="8">
					<TableView fx:id="borrowedTable" VBox.vgrow="ALWAYS">
						<columns>
							<TableColumn fx:id="bModelCol" text="Model" prefWidth="220"/>
							<TableColumn fx:id="bOwnerCol" text="Owner" prefWidth="220"/>
							<TableColumn fx:id="bLocationCol" text="Owner Location (if any)" prefWidth="180"/>
						</columns>
					</TableView>
					<HBox spacing="6" alignment="CENTER_LEFT">
						<TextField fx:id="manualLatLonField" promptText="lat,lon (leave empty to use phone)" HBox.hgrow="ALWAYS"/>
						<Button fx:id="updateLocationBtn" text="Share My Location"/>
						<Pane HBox.hgrow="ALWAYS"/>
						<Button fx:id="returnBtn" text="Return Selected"/>
					</HBox>
				</VBox>
			</Tab>
		</TabPane>
	</VBox>
</AnchorPane>
